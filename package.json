
{
  "name": "gestion-academica-iaev",
  "version": "1.8.9",
  "description": "Aplicacion de escritorio para gestion academica.",
  "author": "Kakit",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Juan-Carlos-upsrj/TestListas"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "dist": "npm run build && electron-builder",
    "mobile:init": "npm install @capacitor/core @capacitor/android @capacitor/app && npm install -D @capacitor/cli && npx cap add android",
    "mobile:sync": "npm run build && npx cap sync",
    "mobile:open": "npx cap open android",
    "android:sync": "npm run build && npx cap sync",
    "android:open": "npx cap open android",
    "android:build": "npm run android:sync && cd android && gradlew assembleDebug"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "chart.js": "^4.5.1",
    "chartjs-plugin-datalabels": "^2.2.0",
    "driver.js": "^1.3.1",
    "electron-log": "^5.1.0",
    "electron-updater": "^6.1.1",
    "framer-motion": "^12.23.24",
    "html2canvas": "^1.4.1",
    "idb": "^8.0.0",
    "jszip": "^3.10.1",
    "jspdf": "^3.0.3",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-grid-layout": "^1.4.4",
    "react-virtualized-auto-sizer": "^1.0.24",
    "react-window": "^1.8.10",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@types/jszip": "^3.4.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-grid-layout": "^1.3.5",
    "@types/react-virtualized-auto-sizer": "^1.0.1",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^90.8",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.19",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "#8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.iaev.gestionacademica",
    "productName": "Gestion Academica IAEV",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "icon": "public/logo.png",
      "artifactName": "Gestion-Academica-IAEV-Setup-${version}.${ext}",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "public/logo.png",
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64", "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64", "arm64"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "public/logo.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
